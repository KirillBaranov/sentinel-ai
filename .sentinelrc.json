{
  "profile": "frontend",
  "profilesDir": "packages/profiles",
  "failOn": "none",
  "maxComments": 50,
  "provider": "local",
  "providerOptions": {
    "model": "gpt-4o-mini",
    "temperature": 0.1,
    "maxTokens": 1500
  },
  "out": {
    "root": ".sentinel",
    "contextDir": "context",
    "reviewsDir": "reviews",
    "analyticsDir": "analytics",
    "exportsDir": "exports"
  },
  "analytics": {
    "enabled": true,
    "salt": "changeme",
    "privacy": "team",
    "mode": "byRun"
  }
}
