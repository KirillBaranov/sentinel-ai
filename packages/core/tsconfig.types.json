{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "rootDir": "./src",
    "outDir": "./dist",

    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "sourceMap": false,

    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/__tests__/**",
    "src/**/*.spec.ts",
    "src/scripts/**"
  ]
}
